<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_form_uvbp" model="ir.ui.view">
        <field name="name">view_company_form_uvbp</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="restrict_partner_identification_duplicates" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>